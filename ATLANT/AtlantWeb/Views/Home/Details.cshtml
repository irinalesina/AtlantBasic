<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">

@model IEnumerable<AtlantWeb.Models.DetailViewModel>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add new detail", "CreateDetail")
</p>

<div class="form-group">
    <label>Search by code: </label>
    <input id="searchValue"/>
    <input type="button" class="btn-default" value="Search"/>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DetailId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Special)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stockmen.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DetailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @if(item.Special)
                {
                    <i class="fa fa-check-square-o" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stockmen.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.DetailId })
            </td>
        </tr>
    }

</table>
