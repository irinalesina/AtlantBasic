
@model IEnumerable<AtlantWeb.Models.StockmenViewModel>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add new stockmen", "CreateStockmen")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockmenId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetailCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockmenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailCount)
            </td>
            <td>
                @if (item.DetailCount == 0)
                {
                    @Html.ActionLink("Delete", "DeleteStockmen", new { id = item.StockmenId })
                }
            </td>
        </tr>
    }

</table>